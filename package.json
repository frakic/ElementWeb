{
  "name": "element-web-automation",
  "version": "0.0.1",
  "description": "Automated test suite for Element Web app",
  "author": "Filip RakiÄ‡",
  "license": "ISC",
  "scripts": {
    "web": "npx cypress open --project ./src/Element-web --config-file ./configuration/config.json",
    "web:prod": "npx cypress open --project ./src/Element-web --config-file ./configuration/config.PROD.json",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "dependencies": {
    "cypress": "9.1.1",
    "typescript": "4.4.4"
  },
  "devDependencies": {
    "@types/node": "16.11.1",
    "@typescript-eslint/eslint-plugin": "4.31.1",
    "@typescript-eslint/parser": "4.31.1",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-cypress": "2.12.1",
    "eslint-plugin-import": "2.22.0",
    "mochawesome": "^7.0.1",
    "mochawesome-merge": "^4.2.0",
    "prettier": "2.4.0",
    "ts-deepmerge": "1.1.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:cypress/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "sort-imports": [
        "error"
      ],
      "indent": [
        "warn",
        2
      ],
      "linebreak-style": [
        "warn",
        "windows"
      ],
      "@typescript-eslint/no-namespace": "off"
    }
  }
}
